<view class="personalContainer">
  <view class="user-section">
    <image class="bg" src="/static/images/personal/bgImg2.jpg"></image>
    <view class="user-info-box" bindtap="toLogin">
      <view class="portrait-box">
        <image class="portrait" src='/static/images/personal/missing-face.png'></image>
      </view>
      <view class="info-box">
        <text class="username">{{userInfo.data.username?userInfo.data.username:'学生'}}</text>
      </view>
    </view>

    <view class="vip-card-box">
      <image class="card-bg" src="/static/images/personal/vip-card-bg.png" mode=""></image>
      <view class="b-btn" bindtap="toremove">
        修改密码
      </view>
      <view class="tit">
        <!-- 会员图标-->
        <text class="iconfont icon-huiyuan-"></text>
        个人信息管理
      </view>
      <text class="e-m">汕头大学活动管理中心</text>
      <text class="e-b">快来加入我们吧！</text>
    </view>
  </view>


  <view class="cover-container">
    
    <!-- 个人中心列表 -->
    <view class="personalContent">
      <view class="recentPlayContainer">
        <text class="title" bindtap="toLanuch">我的发起</text>
        <!-- 最近播放记录 -->
       
      </view>

      <view class="cardList">
        <view class="card-item">
          <text class="title" bindtap="toMyjoin">我的加入</text>
          <text class="more"> > </text>
        </view>
        <view class="card-item">
          <text class="title" bindtap="toMycollect">我的收藏</text>
          <text class="more"> > </text>
        </view>
        <view class="card-item">
          <text class="title" bindtap="toMore">我未加入</text>
          <text class="more"> > </text>
        </view>
      </view>
    </view>
  </view>

</view>